{
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"outDir": "./public/dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"target": "es6",
		"removeComments": true,
		"baseUrl": "src",
		"paths": {
			"com/*": [ "com/*" ],
		}
	},
	"filesGlob": [
		"./server/**/*.ts",
		"!./node_modules/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"test",
		"components"
	]
}